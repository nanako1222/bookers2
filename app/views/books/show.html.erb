<% if flash[:notice] %>
  <%= notice %>
<% end %>

<div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/aside_user', user: @user %>
        <%= render 'books/aside', book: @newbook %>
      </div>

      <div class="col-md-8 offset-md-1">
        <table class="table table-hover table-inverse book-index">
          <h1>Book detail</h1>
          <tr>
            <td>
              <% if @user.profile_image.attached? %>
                <%= image_tag @user.get_profile_image(100,100) %>
              <% else %>
                <%= image_tag 'default-image.jpg', size: "100x100" %>
              <% end %><br>
              <%= link_to @user.name, user_path(@user) %>
            </td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <% if @book.user_id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
            <% end %>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>