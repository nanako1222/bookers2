<!--左側-->
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag user.get_profile_image(100,100) %>
        <table class="table">
        <tbody>
          <tr>
            <th>Name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th><%= user.introduction %></th>
          </tr>
          <tr>
            <th colspan="2">
              <%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" do %>
                <i class="fa-solid fa-user-gear"></i>
              <% end %>
            </th>
          </tr>
        </tbody>
        </table>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: book, url: '/books', method: :post do |f| %>
        <div class = "field">
          <label for ="book_title">Title</label><br>
          <%= f.text_field :title, class:"form-control book_title", id:"book_title" %>
        </div>
        <div class = "field">
          <label for ="book_body">Opinion</label><br>
          <%= f.text_area :body, class:"form-control book_body", id:"book_body" %>
        </div>
        <div class = "actions">
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        </div>
      <% end %>

