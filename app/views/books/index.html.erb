<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render 'books/aside', book: @book ,user: @user %>
    </div>

      <div class="col-md-8 offset-md-1">
          <table class="table table-hover table-inverse book-index">
            <h2>Books</h2>
            <thead>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <%= link_to user_path(book.user) do %>
                      <%= image_tag @user.get_profile_image(80,80) %>
                    <% end %>
                  </td>
                  <td><%= link_to book.title, book_path(book.id) %></td>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>

  </div>
</main>