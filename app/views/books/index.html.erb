<main>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/aside_user', user: @user %>
        <%= render 'books/aside', book: @book %>
      </div>

      <div class="col-md-8 offset-md-1">
          <table class="table table-hover table-inverse book-index">
            <h2>Books</h2>
            <thead>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <%= link_to user_path(book.user) do %>
                      <% if book.user.profile_image.attached? %>
                        <%= image_tag book.user.get_profile_image(80,80) %>
                      <% else %>
                        <%= image_tag 'default-image.jpg', size: "80x80" %>
                      <% end %>
                    <% end %>
                  </td>
                  <td><%= link_to book.title, book_path(book.id) %></td>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</main>