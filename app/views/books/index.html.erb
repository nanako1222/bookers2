<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <thead>
          <tr>
            <%= image_tag @user.get_profile_imageimage_tag(100,100), fallback: "no_image.jpg"%>
          </tr>
        </thead>
        <table class="table">
          <tbody>
            <tr>
              <th>Name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>Introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
            <tr>
              <th colspan="2">
                <%= link_to edit_user_path(current_user), class:"nav-link text-light" do %>
                  <span class="glyphicon glyphicon-wrench" aria-hidden="true">
                    <i class="fa-solid fa-user-gear"></i>
                  </span>
                <% end %>
              </th>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, url: '/books', method: :post do |f| %>
        <div class = "field">
          <label for ="book_title">Title</label><br>
          <%= f.text_field :title, class:"form-control book_title", id:"book_title" %>
        </div>
        <div class = "field">
          <label for ="book_body">Opinion</label><br>
          <%= f.text_area :body, class:"form-control book_body", id:"book_body" %>
        </div>
        <div class = "actions">
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        </div>
      <% end %>

  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <tble class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= image_tag @user.get_profile_image, :fill, 40, 40, format:'jpg', fallback:"no_image.jpg", size:"40x40" %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </tble>
  </div>
</main>