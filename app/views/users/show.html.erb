<main>
　<% if flash[:notice] %>
    <%= notice %>
  <% end %>

  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/aside_user', user: @user %>
        <%= render 'books/aside', book: @book %>
      </div>

      <div class="col-md-8 offset-md-1">
        <table class="table table-hover table-inverse book-index">
          <h1>Books</h1>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(@user) do %>
                    <% if @user.profile_image.attached? %>
                      <%= image_tag @user.get_profile_image(80,80) %>
                    <% else %>
                      <%= image_tag 'default-image.jpg', size: "80x80" %>
                    <% end %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
        </table>
      </div>
    </div>
  </div>
</main>