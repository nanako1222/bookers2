<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render 'books/aside', book: @book ,user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <table class="table table-hover table-inverse book-index">
        <h1>Books</h1>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(@user) do %>
                  <%= image_tag @user.get_profile_image(80,80) %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
</main>